# ===========================================
# DATABASE CONFIGURATION
# ===========================================

# Server name and port (Docker exposes 1433 to the host)
DB_SERVER=localhost,5432

# Database name
DB_NAME=DbServiceHub

# Administrator user credentials
DB_USER=admin
DB_PASSWORD=your_password_here

# Connection string
# Update this with your actual connection string
CONNECTION_STRING=Host=localhost;Port=5432;Database=DbServiceHub;Username=admin;Password=your_password_here


# ===========================================
# JWT CONFIGURATION (Authentication)
# ===========================================

# Secret key to sign JWT tokens (generate a new one with: openssl rand -base64 32)
JWT_SECRET_KEY=your_jwt_secret_key_here_must_be_at_least_32_characters
# Token issuer (your API name)
JWT_ISSUER=ProductAPI

# Token audience (who can use these tokens)
JWT_AUDIENCE=ProductWebClients

# Token expiration time in minutes
JWT_EXPIRATION_MINUTES=60

# ===========================================
# GOOGLE OAUTH CONFIGURATION
# ===========================================
GOOGLE_CLIENT_ID=your_google_client_id_here.apps.googleusercontent.com

GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# ===========================================
# ADMIN CREDENTIALS
# ===========================================

ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=your_admin_password_here

# ===========================================
# CORS CONFIGURATION
# ===========================================
# Environment: 'Development' or 'Production'
# In Development, http://localhost:4321 and https://localhost:4321 are automatically allowed.
ASPNETCORE_ENVIRONMENT=Development

# Comma-separated list of allowed origins.
# REQUIRED if ASPNETCORE_ENVIRONMENT is 'Production'.
# Example: https://myapp.com,https://admin.myapp.com
CORS_ALLOWED_ORIGINS=
