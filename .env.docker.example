# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# Server name inside Docker network
DB_SERVER=database
DB_PORT=1433  
DB_NAME=AppDB
DB_USER=sa
DB_PASSWORD=CHANGE_ME_IN_PRODUCTION

# SQL Server Edition (Express, Developer, Standard, Enterprise)
MSSQL_PID=Express

# Accept EULA (Y/N) - Required for SQL Server
ACCEPT_EULA=Y

# Connection string for Docker (uses service name 'database')
CONNECTION_STRING=Server=database,1433;Database=AppDB;User Id=sa;Password=CHANGE_ME_IN_PRODUCTION;Encrypt=False;TrustServerCertificate=True;

# ===========================================
# JWT CONFIGURATION (Authentication)
# ===========================================
# Secret key to sign JWT tokens
# Generate with: openssl rand -base64 32
# Or online: https://generate-random.org/api-token-generator
JWT_SECRET_KEY=CHANGE_ME_IN_PRODUCTION_GENERATE_WITH_OPENSSL_RAND_BASE64_32

# Token issuer (who creates the token)
JWT_ISSUER=ProductAPI

# Token audience (who can use the token)
JWT_AUDIENCE=ProductWebClients

# Token expiration time in minutes
JWT_EXPIRATION_MINUTES=60

# ===========================================
# GOOGLE OAUTH CONFIGURATION
# ===========================================
# Google OAuth Client ID
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
# Google OAuth Client Secret
GOOGLE_CLIENT_SECRET=GOCSPX-your-client-secret
# Google OAuth Redirect URI
# Must match the authorized redirect URI in Google Cloud Console
# For Docker: use localhost (browser perspective)
GOOGLE_REDIRECT_URI=http://localhost:5097/api/auth/google/callback

# ===========================================
# BACKEND CONFIGURATION
# ===========================================
# ASP.NET Core environment (Development, Staging, Production)
ASPNETCORE_ENVIRONMENT=Production

# Backend listening URLs
ASPNETCORE_URLS=http://+:5097

# Backend port (external mapping)
BACKEND_PORT=5097

# ===========================================
# FRONTEND CONFIGURATION
# ===========================================
# Frontend port (external mapping)
FRONTEND_PORT=4321

# Frontend URL for CORS and redirects
FRONTEND_URL=http://localhost:4321

# Backend API URL (used by frontend in Docker network)
# Use 'backend' for inter-container communication
BACKEND_URL=http://backend:5097

# Backend API URL (used by browser/external clients)
# Use 'localhost' for external access
PUBLIC_BACKEND_URL=http://localhost:5097

# ===========================================
# ADMINER CONFIGURATION (Optional - Debug only)
# ===========================================
# Adminer port for database management UI
ADMINER_PORT=8080

# ===========================================
# DOCKER CONFIGURATION
# ===========================================
# Restart policy (no, always, on-failure, unless-stopped)
RESTART_POLICY=unless-stopped